<div class="row justify-content-md-center">
  <div class="col-md-5">
    <h3><%= button_text %></h3>
    <%= form_for @league do |f| %>
      <div class="form-group">
        <%= f.label :name, 'League Name' %>
        <%= f.text_field :name, class: 'form-control', autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :privated, 'Private League?' %>
        <div class="form-check">
          <%= f.radio_button :privated, '1', class: 'form-check-input', checked: @league.privated? %>
          <%= f.label :privated_yes, 'Yes', class: 'form-check-label' %>
        </div>
        <div class="form-check">
          <%= f.radio_button :privated, '0', class: 'form-check-input', checked: @league.not_privated? %>
          <%= f.label :privated_no, 'No', class: 'form-check-label' %>
        </div>
      </div>
      <%= f.submit button_text, class: 'btn btn-lg btn-outline-info' %>
    <% end %>
  </div>
</div>
